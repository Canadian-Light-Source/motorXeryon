# readback values
record(longin, "$(P)$(M)statRb") {
  field(DESC, "status word")
  field(DTYP, "asynInt32")
  field(SCAN, "I/O Intr")
  field(INP,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))STAT")
}

record(longin, "$(P)$(M)sspdRb") {
  field(DESC, "velocity setpoint")
  field(DTYP, "asynInt32")
  field(SCAN, "I/O Intr")
  field(INP,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))SSPD")
}

record(longin, "$(P)$(M)eposRb") {
  field(DESC, "encoder position")
  field(DTYP, "asynInt32")
  field(SCAN, "I/O Intr")
  field(INP,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))EPOS")
}

record(longin, "$(P)$(M)dposRb") {
  field(DESC, "target position")
  field(DTYP, "asynInt32")
  field(SCAN, "I/O Intr")
  field(INP,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))DPOS")
}

record(longin, "$(P)$(M)freqRb") {
  field(DESC, "current exictation frequency")
  field(DTYP, "asynInt32")
  field(SCAN, "I/O Intr")
  field(INP,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))FREQ")
}

# set values or trigger action

## search for index mark
record(mbbo, "$(P)$(M)indx") {
  field(DESC, "search index")
  field(DTYP, "asynInt32")
  field(OUT,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))INDX")
  field(ZRST, "forward")
  field(ZRVL, 0)
  field(ONST, "reverse")
  field(ONVL, 1)
}

## set positioning tolerance
record(longout, "$(P)$(M)ptol") {
  field(DESC, "positioning tolerance")
  field(DTYP, "asynInt32")
  field(OUT,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))PTOL")
}
## set positioning tolerance 2
record(longout, "$(P)$(M)pto2") {
  field(DESC, "positioning tolerance 2")
  field(DTYP, "asynInt32")
  field(OUT,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))PTO2")
}
## test LEDs
record(bo, "$(P)$(M)test") {
  field(DESC, "test LEDS")
  field(DTYP, "asynInt32")
  field(ZNAM, "LEDs off")
  field(ONAM, "LEDs in test mode")
  field(HIGH, 2)
  field(OUT,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))TEST")
}
